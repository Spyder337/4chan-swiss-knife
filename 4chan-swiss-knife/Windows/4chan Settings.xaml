<Window x:Class="_4chan_swiss_knife.Windows._4chan_Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4chan_swiss_knife.Windows"
        mc:Ignorable="d"
        Title="_4chan_Settings" Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBlock>Max Update Timer (In seconds) : </TextBlock>
            <TextBox x:Name="newSleepTime"></TextBox>
            <Button x:Name="submitTime" Click="submitTime_Click">Change Time</Button>
        </StackPanel>
        <TextBlock Grid.Column="1" x:Name="currSleepTimer"></TextBlock>
    </Grid>
</Window>
